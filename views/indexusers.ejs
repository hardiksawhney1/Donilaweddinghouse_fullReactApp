<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Node.js Admin Panel - Users</title>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 20px;
            background-color: #f8f8f8;
            color: #333;
        }

        h1 {
            color: #d32f2f; /* Dark red */
            text-align: center;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            margin-top: 20px;
        }

        th,
        td {
            border: 1px solid #ccc;
            padding: 12px;
            text-align: center;
        }

        th {
            background-color: #0277bd; /* Deep blue */
            color: #fff;
            border-radius: 6px 6px 0 0;
        }

        td {
            background-color: #fff;
            border-top: none;
        }

        a {
            text-decoration: none;
            margin-left: 10px;
            padding: 8px;
            color: #fff;
            background-color: #d32f2f; /* Dark red */
            border-radius: 4px;
        }

        a:hover {
            background-color: #b71c1c; /* Darker red on hover */
        }

        form {
            margin-top: 20px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #666;
        }

        input[type="text"],
        textarea,
        input[type="date"] {
            padding: 8px;
            margin-bottom: 10px;
            width: 100%;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        button[type="submit"] {
            padding: 10px 16px;
            background-color: #d32f2f; /* Dark red */
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button[type="submit"]:hover {
            background-color: #b71c1c; /* Darker red on hover */
        }
    </style>
</head>
<body>
    <h1>User List</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Full Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>Gender</th>
                <th>Activity</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(user => { %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.fullname %></td>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= user.gender %></td>
                <td>
                    <a href="/users/edit/<%= user.id %>">Edit</a>
                    <a href="/users/delete/<%= user.id %>">Delete</a>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>

    <h2>Add User</h2>
    <form action="/users/add" method="post">
        <label for="fullname">Full Name:</label>
        <input type="text" name="fullname" required />
        <label for="username">Username:</label>
        <input type="text" name="username" required />
        <label for="email">Email:</label>
        <input type="text" name="email" required />
        <label for="password">Password:</label>
        <input type="text" name="password" required />
        <label for="gender">Gender:</label>
        <input type="text" name="gender" required />
        <button type="submit">Add User</button>
    </form>
</body>
</html>
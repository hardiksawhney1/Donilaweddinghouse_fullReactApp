<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Node.js Admin Panel</title>
    <style>
body {
  font-family: 'Roboto', sans-serif;
  margin: 20px;
  background-color: #f8f8f8;
  color: #333;
}

h1 {
  color: #d32f2f; /* Dark red */
  text-align: center;
  margin-bottom: 20px;
}

table {
  width: 100%;
  border-collapse: separate;
  border-spacing: 0;
  margin-top: 20px;
}

th,
td {
  border: 1px solid #ccc;
  padding: 12px;
  text-align: center;
  max-width: 100px;
  overflow: auto;
}

th {
  background-color: #0277bd; /* Deep blue */
  color: #fff;
  border-radius: 6px 6px 0 0;
}

td {
  background-color: #fff;
  border-top: none;
}

a {
  text-decoration: none;
  margin-left: 10px;
  padding: 8px;
  color: #fff;
  background-color: #d32f2f; /* Dark red */
  border-radius: 4px;
}

a:hover {
  background-color: #b71c1c; /* Darker red on hover */
}

form {
  margin-top: 20px;
}

label {
  display: block;
  margin-bottom: 8px;
  color: #666;
}

input[type="text"],
textarea,
input[type="date"] {
  padding: 8px;
  margin-bottom: 10px;
  width: 100%;
  border: 1px solid #ccc;
  border-radius: 4px;
}

button[type="submit"] {
  padding: 10px 16px;
  background-color: #d32f2f; /* Dark red */
  color: #fff;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

button[type="submit"]:hover {
  background-color: #b71c1c; /* Darker red on hover */
}
    </style>
  </head>
  <body>
    <h1>Reviews List</h1>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Username</th>
          <th>Photo URL</th>
          <th>Groom Name</th>
          <th>Bride Name</th>
          <th>Review</th>
          <th>Timestamp</th>
          <th>Wedding Date</th>
          <!-- <th>Date</th> -->
          <th>Activity</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(review => { %>
        <tr>
          <td><%= review.id %></td>
          <td><%= review.username %></td>
          <td><%= review.photo_url %></td>
          <td><%= review.groom_name %></td>
          <td><%= review.bride_name %></td>
          <td><%= review.review %></td>
          <td><%= review.timestamp %></td>
          <td><%= review.weddingdate %></td>
          <!-- <td><%= review.date %></td> -->
          <td>
            <!-- <a href="/reviews/edit/<%= review.id %>">Edit</a> -->
            <a href="/reviews/delete/<%= review.id %>">Delete</a>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>

